[[ -n "$LIBPS4MKPKG_EXECUTABLE_PS4_SH" ]] && return
LIBPS4MKPKG_EXECUTABLE_PS4_SH=1

PS4MKPKG_LIBRARY=${PS4MKPKG_LIBRARY:-'@libps4mkpkgdir@'}

source "$PS4MKPKG_LIBRARY/util/message.sh"

executable_functions+=('executable_ps4')

executable_ps4() {
    if (( ! NODEPS || DEP_BIN || RMDEPS || INSTALL )); then
		if [[ -z $PS4_PATH ]]; then
			error "$(gettext "Cannot find the %s binary required for dependency operations.")" "$PS4"
			return 1
		fi
	fi
}
