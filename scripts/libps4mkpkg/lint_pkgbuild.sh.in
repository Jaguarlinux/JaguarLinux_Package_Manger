[[ -n "$LIBPS4MKPKG_LINT_PKGBUILD_SH" ]] && return
LIBPS4MKPKG_LINT_PKGBUILD_SH=1

PS4MKPKG_LIBRARY=${PS4MKPKG_LIBRARY:-'@libps4mkpkgdir@'}

source "$PS4MKPKG_LIBRARY/util/message.sh"


declare -a lint_pkgbuild_functions

for lib in "$PS4MKPKG_LIBRARY/lint_pkgbuild/"*.sh; do
	source "$lib"
done

readonly -a lint_pkgbuild_functions


lint_pkgbuild() {
	local ret=0

	for func in ${lint_pkgbuild_functions[@]}; do
		$func || ret=1
	done

	return $ret
}
